{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://promptg.io/schemas/v1/prompt.schema.json",
  "title": "PromptG Prompt",
  "description": "Schema for PromptG prompt files",
  "type": "object",
  "additionalProperties": false,
  "required": ["kind", "schemaVersion", "name", "content"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "Optional JSON Schema identifier for editor tooling."
    },
    "kind": {
      "type": "string",
      "const": "prompt",
      "description": "Discriminator for the document kind"
    },
    "schemaVersion": {
      "type": "string",
      "const": "1",
      "description": "Schema version"
    },
    "name": {
      "type": "string",
      "description": "Unique identifier in kebab-case",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "minLength": 1,
      "maxLength": 100
    },
    "content": {
      "type": "string",
      "description": "The actual prompt text with optional {{variables}}",
      "minLength": 1
    },
    "defaults": {
      "type": "object",
      "description": "Optional default values for variables",
      "propertyNames": { "pattern": "^[a-zA-Z0-9_-]+$" },
      "additionalProperties": { "type": "string" }
    },
    "displayName": {
      "type": "string",
      "description": "Human-readable name for display",
      "minLength": 1,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "description": "Brief description of what this prompt does",
      "maxLength": 1000
    },
    "tags": {
      "type": "array",
      "description": "Tags for categorization",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
        "maxLength": 50
      },
      "maxItems": 50,
      "uniqueItems": true
    },
    "author": {
      "type": "string",
      "description": "Author or maintainer",
      "maxLength": 200
    },
    "x-promptg-interactive": {
      "type": "object",
      "description": "PromptG CLI/UI interactive metadata (non-core).",
      "propertyNames": { "pattern": "^[a-zA-Z0-9_-]+$" },
      "additionalProperties": { "$ref": "#/$defs/InteractiveVar" }
    },
    "x-promptg-time": { "$ref": "#/$defs/PromptGTime" }
  },
  "patternProperties": {
    "^x-[a-z0-9][a-z0-9-]*$": {
      "description": "Extension fields (tool/vendor-specific)."
    }
  },
  "$defs": {
    "InteractiveVar": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "question": { "type": "string", "minLength": 1, "maxLength": 500 },
        "help": { "type": "string", "maxLength": 2000 },
        "required": { "type": "boolean", "default": false }
      },
      "required": ["question"]
    },
    "PromptGTime": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "createdAt": { "type": "string", "format": "date-time" }
      }
    }
  }
}
